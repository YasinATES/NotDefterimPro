
@{
    ViewBag.Title = "TryUpdatePasswd";
}

<br /> <br />
       <div class="container">
           <div class="col-lg-4 col-md-6 col-xs-12">
               <h3>E-Posta İle Şifre Öğrenme</h3>
               <p style="color:limegreen">Sisteme Kayıtlı E-Postanızı Giriniz.<br />Şifre Size Mail Olarak Gönderilecek</p>

               <form action="TryUpdatePasswd" method="post">
                   <div class="form-group">
                       <input type="email" class="form-control col" name="EMail" placeholder="E-Mail">
                   </div>
                   <div class="form-group">
                       <button type="submit" class="btn btn-outline-primary col">Mail Gönder</button>
                   </div>

               </form>
           </div>
       </div>


