<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-9" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Not Defretim Pro</title>
    @*<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>*@
    <script src="~/Scripts/JavaScriptSweetAlert.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Scripts/logo.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <img src="~/Content/Image/NotDefteriLogo.png" class="logomobil" height="29" width:auto style="margin-right:5px"/>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Anasayfa", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    @if (Session["UserName"] == null)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Kayıt Ol", "SingUp", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Giriş Yap", "Login", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                    else
                    {
                        if (Convert.ToString(Session["Oturum"]) == "admin")
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Admin Panel", "UserList", "Home", new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Ders Tablosu", "LessonTable", "Home", new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Çıkış Yap", "LogOff", "Home", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Ders Tablosu", "LessonTable", "Home", new { area = "" }, new { @class = "nav-link" })
                            </li>
                            if (Convert.ToString(Session["Oturum"]) != "admin")
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Şifre İşlemleri", "UpdatePasswd", "Home", new { area = "" }, new { @class = "nav-link" })
                                </li>
                            }
                            <li class="nav-item">
                                @Html.ActionLink("Çıkış Yap", "LogOff", "Home", new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }

                    }
                    @{
                        if (Session["UserName"] != null)
                        {
                            <li class="nav-item">
                                <h4 class="col-lg" style="float:right; padding-top:10px; color:white; font-size:17px;">Hoşgeldiniz @Session["UserName"].ToString()</h4>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - All Rights Reserved.</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    @*<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>*@
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    @RenderSection("scripts", false)
    <script>@Html.Raw(ViewBag.Script)</script>
</body>
</html>